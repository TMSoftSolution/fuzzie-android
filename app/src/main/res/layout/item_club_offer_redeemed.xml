<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="112dp"
    android:id="@+id/item_club_offer_redeemed_id"
    android:background="@color/white">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/ivStore"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="16dp"
        android:scaleType="centerCrop"
        app:riv_corner_radius="2dp"
        android:layout_centerVertical="true"
        android:src="@drawable/categories_placeholder"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        tools:text="S$8.50"
        android:textColor="@color/colorPrimary"
        android:textSize="12sp"
        fontPath="@string/font_lato_bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/ivStore"
        android:layout_toStartOf="@+id/tvPrice"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tvOfferName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="1 for 1 main course"
            android:textColor="#262626"
            android:textSize="14sp"
            fontPath="@string/font_lato_bold" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tvBrandName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            tools:text="Tanuki Raw"
            android:textColor="#262626"
            android:textSize="12sp"
            fontPath="@string/font_lato_regular" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tvRedeemDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            tools:text="Redeemed 15th Nov"
            android:textColor="#939393"
            android:textSize="12sp"
            fontPath="@string/font_lato_bold" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="16dp"
        android:layout_alignParentBottom="true"
        android:background="@color/light_border"/>

</RelativeLayout>