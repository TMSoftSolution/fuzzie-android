<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_categories_id"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginBottom="10dp" >

    <View
        android:id="@+id/topBorder"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lily_white"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tvTitle"
        android:layout_below="@+id/topBorder"
        fontPath="@string/font_brandon_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="19dp"
        android:layout_marginTop="21dp"
        android:text="CATEGORIES"
        android:textColor="#434343"
        android:textSize="14sp" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tvViewAll"
        android:layout_below="@+id/topBorder"
        fontPath="@string/font_brandon_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="25dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:text="VIEW ALL"
        android:textColor="@color/colorPrimary"
        android:textSize="10sp"
        android:visibility="invisible"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvCategories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTitle"
        android:background="@color/white"
        tools:listitem="@layout/item_home_category"
        android:paddingRight="10dp"
        android:clipToPadding="false" />

    <View
        android:layout_marginTop="25dp"
        android:layout_below="@+id/rvCategories"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lily_white"/>

</RelativeLayout>

