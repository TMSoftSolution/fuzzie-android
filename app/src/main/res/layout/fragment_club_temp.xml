<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@id/ivBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:background="@color/black"
        android:src="@drawable/club_background" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tvNotify"
        fontPath="fonts/Lato_Regular.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        android:layout_centerHorizontal="true"
        android:padding="12dp"
        android:text="We'll notify you once the Club is open for business"
        android:textColor="@color/white"
        android:textSize="11sp" />

    <android.support.v7.widget.AppCompatTextView
        fontPath="@string/font_brandon_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/red_bg_borderless"
        android:padding="12dp"
        android:text="COMING SOON"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        android:id="@+id/appCompatTextView"
        android:layout_above="@+id/tvNotify"
        android:layout_marginBottom="8dp"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitCenter"
            android:layout_gravity="center"
            android:src="@drawable/bowtie_bear"/>

        <android.support.v7.widget.AppCompatTextView
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="THE FUZZIE CLUB"
            android:textColor="@color/white"
            android:textSize="30sp"
            fontPath="@string/font_brandon_black"
            />

        <android.support.v7.widget.AppCompatTextView
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Join the Bear's exclusive club for hand-selected deals and save a lot more!"
            android:textColor="@color/white"
            android:textSize="13sp"
            fontPath="fonts/Lato_Regular.ttf"
            />

    </LinearLayout>

</RelativeLayout>