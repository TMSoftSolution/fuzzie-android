<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/id_code_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg_activate_code"
        android:scaleType="centerCrop"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:padding="8dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_back"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:text="CODE"
            android:textSize="16sp"
            fontPath="@string/font_brandon_bold"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/white" />

    </RelativeLayout>

    <EditText
        android:id="@+id/etCode"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:layout_below="@+id/tvBody"
        android:layout_centerHorizontal="true"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textSize="14sp"
        android:textColor="@color/textColorPrimary"
        android:textColorHint="@color/textHintColor"
        android:hint="Your code"
        fontPath="@string/font_lato_regular"
        tools:ignore="MissingPrefix"
        android:background="@drawable/bg_white_stroke_white_radius_4dp"
        android:inputType="text"/>



    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tvTitle"
        android:layout_marginTop="150dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="17dp"
        android:layout_centerHorizontal="true"
        android:text="ACTIVATE YOUR CODE"
        android:textAllCaps="true"
        android:textColor="@color/white"
        fontPath="@string/font_brandon_black"
        android:textSize="24sp" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tvBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTitle"
        android:layout_marginBottom="7dp"
        android:layout_marginLeft="@dimen/material_text_display3"
        android:layout_marginRight="@dimen/material_text_display3"
        android:layout_centerHorizontal="true"
        android:text="Got a Fuzzie code? Enter it here to activate."
        android:textAlignment="center"
        android:textColor="@color/white"
        fontPath="@string/font_lato_regular"
        android:textSize="15sp" />


    <android.support.v7.widget.CardView
        android:id="@+id/cvCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/etCode"
        android:layout_marginTop="16dp"
        android:foreground="?attr/selectableItemBackground"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="45dp"
        app:cardElevation="0dp"
        >

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btCode"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/etCode"
            android:foreground="?android:attr/selectableItemBackground"
            android:background="@drawable/activate_code" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tvHelp"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:text="Need help?"
        android:textColor="@color/white"
        fontPath="@string/font_lato_bold"
        android:textSize="14sp" />

</RelativeLayout>
