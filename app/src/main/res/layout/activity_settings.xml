<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

  <RelativeLayout
      android:background="@color/primary"
      android:layout_width="match_parent"
      android:layout_height="56dp">

    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="8dp"
        android:padding="8dp"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_arrow_back"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:text="SETTINGS"
        android:maxLines="1"
        android:textSize="16sp"
        fontPath="@string/font_brandon_bold"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/white" />

  </RelativeLayout>


  <android.support.v4.widget.NestedScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:paddingTop="16dp">

      <TextView
          style="@style/Base.TextAppearance.AppCompat.Caption"
          fontPath="@string/font_brandon_black"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="4dp"
          android:layout_marginTop="12dp"
          android:paddingLeft="16dp"
          android:paddingRight="16dp"
          android:text="My Account"
          android:textAllCaps="true"
          android:textColor="@color/textColorQuinary"
          android:textSize="11sp"
          tools:ignore="MissingPrefix"
          tools:text="My Account" />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@color/white"
          android:orientation="vertical">

        <TextView
            android:id="@+id/tvProfile"
            style="@style/Base.TextAppearance.AppCompat.Subhead"
            fontPath="@string/font_lato_regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:drawableRight="@drawable/ic_chevron_right_grey"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:text="Edit profile"
            android:textColor="@color/textColorTertiary"
            android:textSize="14.5sp"
            tools:ignore="MissingPrefix"
            tools:text="Edit profile" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="16dp"
            android:background="@color/lily_white" />

        <TextView
            android:id="@+id/tvProfilePic"
            style="@style/Base.TextAppearance.AppCompat.Subhead"
            fontPath="@string/font_lato_regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:drawableRight="@drawable/ic_chevron_right_grey"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:text="Edit profile picture"
            android:textColor="@color/textColorTertiary"
            android:textSize="14.5sp"
            tools:ignore="MissingPrefix"
            tools:text="Edit profile picture" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="16dp"
            android:background="@color/lily_white" />

        <TextView
            android:id="@+id/tvPassword"
            style="@style/Base.TextAppearance.AppCompat.Subhead"
            fontPath="@string/font_lato_regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:drawableRight="@drawable/ic_chevron_right_grey"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:text="Edit password"
            android:textColor="@color/textColorTertiary"
            android:textSize="14.5sp"
            tools:ignore="MissingPrefix"
            tools:text="Edit password" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="16dp"
            android:background="@color/lily_white" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/swShare"
            style="@style/Base.TextAppearance.AppCompat.Subhead"
            fontPath="@string/font_lato_regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:padding="16dp"
            android:text="Share likes and wishlist"
            android:textColor="@color/textColorTertiary"
            android:textSize="14.5sp"
            android:theme="@style/SettingSwitch"
            tools:ignore="MissingPrefix"
            tools:text="Share likes and wishlist" />


      </LinearLayout>

      <TextView
          style="@style/Base.TextAppearance.AppCompat.Caption"
          fontPath="@string/font_brandon_black"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="4dp"
          android:layout_marginTop="24dp"
          android:paddingLeft="16dp"
          android:paddingRight="16dp"
          android:text="About"
          android:textAllCaps="true"
          android:textColor="@color/textColorQuinary"
          android:textSize="11sp"
          tools:ignore="MissingPrefix"
          tools:text="About" />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@color/white"
          android:orientation="vertical">

        <TextView
            android:id="@+id/tvTerms"
            style="@style/Base.TextAppearance.AppCompat.Subhead"
            fontPath="@string/font_lato_regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:drawableRight="@drawable/ic_chevron_right_grey"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:text="Terms of services"
            android:textColor="@color/textColorTertiary"
            android:textSize="14.5sp"
            tools:ignore="MissingPrefix"
            tools:text="Terms of services" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="16dp"
            android:background="@color/lily_white" />

        <TextView
            android:id="@+id/tvPrivacy"
            style="@style/Base.TextAppearance.AppCompat.Subhead"
            fontPath="@string/font_lato_regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:drawableRight="@drawable/ic_chevron_right_grey"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:text="Privacy policy"
            android:textColor="@color/textColorTertiary"
            android:textSize="14.5sp"
            tools:ignore="MissingPrefix"
            tools:text="Privacy policy" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="16dp"
            android:background="@color/lily_white" />

        <TextView
            android:id="@+id/tvLogout"
            style="@style/Base.TextAppearance.AppCompat.Subhead"
            fontPath="@string/font_brandon_medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:text="Log out"
            android:textColor="@color/colorPrimary"
            tools:ignore="MissingPrefix" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lily_white" />

      </LinearLayout>

      <TextView
          android:id="@+id/tvVersion"
          style="@style/Base.TextAppearance.AppCompat.Body1"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:padding="16dp"
          android:text="Fuzzie - Version 2.0"
          android:textAllCaps="true"
          android:textColor="@color/textColorSecondary"
          tools:text="Fuzzie - Version 2.0" />

    </LinearLayout>
  </android.support.v4.widget.NestedScrollView>


</LinearLayout>