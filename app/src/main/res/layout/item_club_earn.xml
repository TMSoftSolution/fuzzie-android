<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/item_club_earn_id"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@drawable/bg_club_earn">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tvEarn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S$48.10"
            android:textSize="26sp"
            fontPath="@string/font_brandon_bold"
            android:textColor="@color/white" />

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estimated total Club savings earned"
            android:textSize="12sp"
            fontPath="@string/font_lato_bold"
            android:textColor="@color/black"
            android:alpha="0.4"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/ivSetting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:padding="8dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_club_setting" />

</RelativeLayout>