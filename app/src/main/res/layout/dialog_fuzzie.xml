<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/bg_dialog_fuzzie"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_dialog_fuzzie"
        android:layout_gravity="center"
        android:paddingTop="25dp"
        android:gravity="center">

        <RelativeLayout
            android:id="@+id/llTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:android="http://schemas.android.com/apk/res/android">
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/oops"
                android:textColor="@color/primary"
                android:textSize="16sp"
                fontPath="@string/font_brandon_black"
                />
            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/gfProcess"
                android:layout_width="20dp"
                android:layout_height="5dp"
                android:layout_toRightOf="@+id/tvTitle"
                android:layout_toEndOf="@+id/tvTitle"
                android:layout_marginStart="2dp"
                android:layout_alignBottom="@+id/tvTitle"
                android:layout_marginBottom="6dp"
                android:src="@drawable/process"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <android.support.v4.widget.Space
                android:id="@+id/space"
                android:layout_width="10dp"
                android:layout_height="match_parent" />
            <ImageView
                android:id="@+id/ivBear"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/bear_craft"
                android:scaleType="fitCenter"
                />

        </LinearLayout>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tvBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textSize="14sp"
            fontPath="@string/font_lato_regular"
            android:text="There's no Fuzzie account linked to this email address."
            android:textAlignment="center"
            android:visibility="visible"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/tvOK"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_diaolg_fuzzie_button"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="OK"
            android:textSize="17sp"
            android:visibility="visible"/>

    </LinearLayout>

</LinearLayout>