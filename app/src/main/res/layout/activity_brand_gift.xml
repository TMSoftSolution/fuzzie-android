<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:fitsSystemWindows="true">

  <android.support.design.widget.AppBarLayout
      android:id="@+id/app_bar_layout"
      android:layout_width="match_parent"
      android:layout_height="280dp"
      android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
      android:fitsSystemWindows="true"
      app:layout_behavior="sg.com.fuzzie.android.utils.FlingBehavior"
      android:visibility="visible">

    <android.support.design.widget.CollapsingToolbarLayout
        android:id="@+id/collapsing_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
        app:contentScrim="?attr/colorPrimary"
        app:collapsedTitleGravity="center"
        app:collapsedTitleTextAppearance="@style/AppBarTextAppearance"
        app:expandedTitleTextAppearance="@style/AppBarExpandedTextAppearance">

      <!-- Image Header -->
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:fitsSystemWindows="true"
          android:visibility="visible">

        <android.support.v4.view.ViewPager
            android:id="@+id/vpPhotos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/brands_placeholder" />

        <ImageView
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/top_bottom_gradient" />

        <android.support.design.widget.TabLayout
            android:id="@+id/tlPhotosIndicator"
            android:layout_width="match_parent"
            android:layout_height="7dp"
            android:layout_alignBottom="@id/vpPhotos"
            android:layout_marginBottom="12dp"
            app:tabGravity="center"
            app:tabIndicatorHeight="0dp"
            app:tabPaddingStart="0dp"
            app:tabPaddingEnd="5dp" />

        <ImageView
            android:id="@+id/ivCategory"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignBottom="@+id/vpPhotos"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="4dp"
            android:src="@drawable/ic_category_1_white" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tvCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/ivCategory"
            android:layout_alignTop="@id/ivCategory"
            android:layout_alignBottom="@id/ivCategory"
            android:gravity="center_vertical"
            android:textColor="@android:color/white"
            android:textSize="13sp"
            fontPath="@string/font_lato_bold"
            tools:text="BARS" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tvSoldOut"
            fontPath="@string/font_brandon_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:gravity="center"
            android:textAlignment="center"
            android:lines="1"
            android:text="SOLD OUT"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:background="@drawable/bg_soldout"
            android:textSize="13sp"
            android:visibility="gone" />

      </RelativeLayout>

      <android.support.v7.widget.Toolbar
          android:id="@+id/toolbar"
          android:layout_width="match_parent"
          android:layout_height="?attr/actionBarSize"
          app:popupTheme="@style/ThemeOverlay.AppCompat.Dark"
          app:layout_collapseMode="pin"
          app:contentInsetLeft="0dp"
          app:contentInsetRight="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

          <android.support.v7.widget.AppCompatTextView
              android:id="@+id/tvTitle"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:layout_marginEnd="24dp"
              android:gravity="center"
              android:maxLines="1"
              android:ellipsize="end"
              android:textSize="16sp"
              fontPath="@string/font_brandon_bold"
              android:textAllCaps="true"
              android:textColor="@color/white" />

          <RelativeLayout
            android:layout_marginRight="16dp"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:background="?attr/selectableItemBackground">

            <ImageView
              android:id="@+id/ivShoppingBag"
              android:scaleType="centerInside"
              android:layout_height="20dp"
              android:layout_width="20dp"
              android:src="@drawable/ic_shopping_bag_white" />

            <android.support.v7.widget.AppCompatTextView
              android:id="@+id/tvShoppingBag"
              android:background="@drawable/shopping_bag_bg"
              android:paddingLeft="5dp"
              android:paddingRight="5dp"
              android:layout_marginBottom="5dp"
              android:layout_alignParentRight="true"
              android:layout_alignParentBottom="true"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/colorPrimary"
              android:layout_gravity="center"
              android:textSize="11sp"
              fontPath="@string/font_brandon_black"
              android:text="1" />

          </RelativeLayout>

        </LinearLayout>

      </android.support.v7.widget.Toolbar>

    </android.support.design.widget.CollapsingToolbarLayout>

  </android.support.design.widget.AppBarLayout>

  <android.support.v4.widget.NestedScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="#F5F5F5"
      android:clipToPadding="false"
      android:overScrollMode="never"
      app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F5F5F5"
        android:orientation="vertical">


      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@color/white"
          android:paddingBottom="16dp"
          android:orientation="vertical">

        <!-- Name/Title + Cashback/Powerup -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="21dp"
            android:orientation="horizontal">

          <android.support.v7.widget.AppCompatTextView
              android:id="@+id/tvBrandName"
              fontPath="@string/font_lato_bold"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:ellipsize="end"
              android:textColor="@color/textColorTertiary"
              android:textSize="18sp"
              tools:text="Package - Botanical Energy (1 Hour)" />

          <android.support.v7.widget.CardView
              android:id="@+id/cvCashback"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="20dp"
              android:layout_marginTop="4dp"
              app:cardCornerRadius="2dp"
              app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

              <android.support.v7.widget.AppCompatTextView
                  android:id="@+id/tvCashback"
                  fontPath="@string/font_brandon_bold"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:background="@color/celestial_blue"
                  android:drawableStart="@drawable/ic_cashback_white_16dp"
                  android:drawablePadding="4dp"
                  android:gravity="center"
                  android:paddingBottom="8dp"
                  android:paddingLeft="8dp"
                  android:paddingRight="8dp"
                  android:paddingTop="8dp"
                  android:text="20%"
                  android:textColor="@color/white"
                  android:textSize="13sp" />

              <android.support.v7.widget.AppCompatTextView
                  android:id="@+id/tvPowerUp"
                  fontPath="@string/font_brandon_bold"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:background="@drawable/bg_powerup_white"
                  android:drawableStart="@drawable/ic_lighting_accent_16dp"
                  android:drawablePadding="4dp"
                  android:gravity="center"
                  android:paddingBottom="8dp"
                  android:paddingLeft="8dp"
                  android:paddingRight="8dp"
                  android:paddingTop="8dp"
                  android:text="+20%"
                  android:textColor="@color/colorPowerUpActive"
                  android:textSize="13sp" />

            </LinearLayout>

          </android.support.v7.widget.CardView>

        </LinearLayout>

        <!-- Prices (for services) -->
        <LinearLayout
            android:id="@+id/llPrices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="horizontal"
            android:visibility="gone">

          <android.support.v7.widget.AppCompatTextView
              android:id="@+id/tvPrice"
              fontPath="@string/font_lato_bold"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/colorPrimary"
              android:textSize="18sp"
              tools:text="S$100" />

          <!--//Use tv.setPaintFlags(tv.getPaintFlags() | Paint.STRIKE_THRU_TEXT_FLAG); to set strikethrough-->
          <android.support.v7.widget.AppCompatTextView
              android:id="@+id/tvStrikePrice"
              fontPath="@string/font_lato_regular"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="@dimen/margin_small"
              android:textColor="#adadad"
              android:textSize="18sp"
              tools:text="S$100" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/vClubMember"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

          <ImageView
              android:layout_width="30dp"
              android:layout_height="30dp"
              android:layout_marginStart="16dp"
              android:src="@drawable/ic_club_member" />

          <android.support.v7.widget.AppCompatTextView
              fontPath="@string/font_lato_regular"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginEnd="16dp"
              android:layout_marginStart="8dp"
              android:textColor="#A8A8A8"
              android:textSize="12sp"
              android:text="Exclusive for Fuzzie Club members." />

        </LinearLayout>

      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="10dp"
          android:background="@color/white"
          android:orientation="vertical"
          android:visibility="visible">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvGiftCards"
            android:layout_width="wrap_content"
            android:layout_height="54dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:clipToPadding="false"
            android:gravity="center_horizontal"
            android:nestedScrollingEnabled="false"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            tools:listitem="@layout/item_giftcard"
            android:overScrollMode="never"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:weightSum="2">

          <android.support.v7.widget.CardView
              android:id="@+id/cvBuyIt"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:layout_marginRight="5dp"
              android:clickable="true"
              android:focusable="true"
              android:foreground="?selectableItemBackground"
              app:cardBackgroundColor="@color/colorPrimary"
              app:cardCornerRadius="4dp"
              app:cardElevation="0dp">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tvButIt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                fontPath="@string/font_brandon_black"
                android:textSize="14sp"
                android:gravity="center"
                android:text="BUY IT"
                android:textAllCaps="true"
                android:textColor="@color/white"/>

          </android.support.v7.widget.CardView>

          <android.support.v7.widget.CardView
              android:id="@+id/cvGiftIt"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:layout_marginLeft="5dp"
              android:clickable="true"
              android:focusable="true"
              android:foreground="?selectableItemBackground"
              app:cardBackgroundColor="@color/primary"
              app:cardCornerRadius="4dp"
              app:cardElevation="0dp">

            <android.support.v7.widget.AppCompatTextView
                fontPath="@string/font_brandon_black"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="GIFT IT"
                android:gravity="center"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

          </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/cashContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

          <LinearLayout
              android:id="@+id/cashbackInfo"
              android:layout_width="match_parent"
              android:layout_height="60dp"
              android:layout_marginStart="16dp"
              android:layout_marginEnd="16dp"
              android:gravity="center|start"
              android:orientation="horizontal"
              android:background="@drawable/bg_cash_back_info_bottom_cut">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:src="@drawable/ic_cashback"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tvCashbackPercentage"
                fontPath="@string/font_lato_bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:textColor="#5B5B5B"
                android:textSize="14sp" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tvEarn"
                fontPath="@string/font_lato_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:gravity="center"
                android:textColor="@color/discount_blue"
                android:textSize="14sp" />

          </LinearLayout>

          <LinearLayout
              android:id="@+id/powerupInfo"
              android:layout_width="match_parent"
              android:layout_height="60dp"
              android:layout_marginStart="16dp"
              android:layout_marginEnd="16dp"
              android:gravity="center|start"
              android:orientation="horizontal"
              android:background="@drawable/bg_power_up_info_top_cut">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:src="@drawable/ic_powerup"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:orientation="vertical">

              <android.support.v7.widget.AppCompatTextView
                  android:id="@+id/tvPowerUpPercentage"
                  fontPath="@string/font_lato_black"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="@color/white"
                  android:textSize="12sp" />

              <android.support.v7.widget.AppCompatTextView
                  fontPath="@string/font_lato_regular"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="with the Power Up Card"
                  android:textColor="@color/white"
                  android:textSize="12sp" />

            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_chevron_right_white"/>

          </LinearLayout>

          <android.support.v7.widget.AppCompatTextView
              android:id="@+id/tvLearnMore"
              fontPath="@string/font_lato_bold"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="20dp"
              android:layout_marginBottom="20dp"
              android:padding="8dp"
              android:layout_gravity="center"
              android:text="@string/txt_learn_more_reward"
              android:textColor="#A3A3A3"
              android:textSize="12sp" />

        </LinearLayout>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tvRedeemValid"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#406FFA3E"
            android:textColor="#579741"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="12sp"
            fontPath="@string/font_lato_bold"/>

        <LinearLayout
            android:id="@+id/llValidOptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

          <View
              android:layout_width="match_parent"
              android:layout_height="1dp"
              android:background="@color/lily_white" />

          <android.support.v7.widget.RecyclerView
              android:id="@+id/rvValidOption"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:layout_marginTop="8dp"
              android:layout_marginBottom="8dp"
              android:paddingEnd="16dp"
              tools:listitem="@layout/item_valid_option_new"
              android:clipToPadding="false"
              android:nestedScrollingEnabled="false"
              android:overScrollMode="never"
              android:visibility="visible"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lily_white" />

        <!-- Likers -->

        <RelativeLayout
            android:id="@+id/likers_layout"
            android:layout_width="match_parent"
            android:layout_height="70dp">

          <LinearLayout
              android:id="@+id/liker_set"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerVertical="true"
              android:layout_marginStart="10dp"
              android:background="@drawable/white_bg_gray_border"
              android:gravity="center"
              android:padding="10dp">

            <ImageView
                android:id="@+id/liker_image"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_heart" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/liker_count"
                fontPath="@string/font_lato_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:textColor="@color/textColorTertiary"
                android:textSize="14sp" />

          </LinearLayout>

          <ImageView
              android:id="@+id/liker_more"
              android:layout_width="40dp"
              android:layout_height="40dp"
              android:layout_alignParentEnd="true"
              android:layout_centerVertical="true"
              android:layout_marginEnd="10dp"
              android:visibility="invisible"
              android:src="@drawable/ic_liker_more" />


          <!-- Likers List -->
          <android.support.v7.widget.RecyclerView
              android:id="@+id/rvLikers"
              android:layout_width="wrap_content"
              android:layout_height="40dp"
              android:layout_centerVertical="true"
              android:clipToPadding="false"
              android:layout_toStartOf="@+id/liker_more"
              android:numColumns="auto_fit"
              android:nestedScrollingEnabled="false"
              tools:listitem="@layout/item_liker" />


          <android.support.v7.widget.AppCompatTextView
              android:id="@+id/empty"
              fontPath="@string/font_lato_bold"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="10dp"
              android:layout_centerVertical="true"
              android:layout_toRightOf="@+id/liker_set"
              android:text="Be the first to like this brand"
              android:textColor="@color/textColorTertiary"
              android:textSize="13sp" />

          <pl.droidsonroids.gif.GifImageView
              android:id="@+id/gifloader"
              android:layout_width="60dp"
              android:layout_height="60dp"
              android:src="@drawable/loader_circle"
              android:background="@android:color/transparent"
              android:layout_centerHorizontal="true"
              android:layout_centerVertical="true"
              android:visibility="gone"
              />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lily_white" />

        <!-- Wishlist / Share -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

          <LinearLayout
              android:id="@+id/btnAddToWishlist"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:clickable="true"
              android:background="?attr/selectableItemBackground"
              android:gravity="center"
              android:paddingBottom="22dp"
              android:paddingLeft="16dp"
              android:paddingRight="16dp"
              android:paddingTop="22dp">

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_add"
                android:tint="#8e8e8e" />

            <android.support.v7.widget.AppCompatTextView
                fontPath="@string/font_lato_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add to wishlist"
                android:textColor="#8e8e8e"
                android:textSize="13sp" />

          </LinearLayout>

          <View
              android:layout_width="1dp"
              android:layout_height="match_parent"
              android:background="@color/lily_white" />

          <LinearLayout
              android:id="@+id/btnShareThis"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:clickable="true"
              android:background="?attr/selectableItemBackground"
              android:gravity="center"
              android:paddingBottom="22dp"
              android:paddingLeft="16dp"
              android:paddingRight="16dp"
              android:paddingTop="22dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_share_grey" />

            <android.support.v7.widget.AppCompatTextView
                fontPath="@string/font_lato_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Share this"
                android:textColor="#8e8e8e"
                android:textSize="13sp" />

          </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lily_white" />

      </LinearLayout>

      <LinearLayout
          android:id="@+id/llParticipate"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="10dp"
          android:background="@color/white"
          android:orientation="vertical"
          android:visibility="gone">

        <ImageView
            android:id="@+id/ivJackpotBanner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/bg_jackpot_banner" />

      </LinearLayout>


      <!-- Top Divider Line -->
      <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@color/lily_white" />

      <!-- Description -->
      <LinearLayout
          android:id="@+id/llDescription"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="10dp"
          android:background="@color/white"
          android:orientation="vertical"
          android:visibility="gone">

        <android.support.v7.widget.AppCompatTextView
            fontPath="@string/font_lato_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="28dp"
            android:text="@string/txt_description"
            android:textColor="#424242"
            android:textSize="15sp" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tvDescription"
            fontPath="@string/font_lato_regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="28dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:lineSpacingMultiplier="1.2"
            android:textIsSelectable="true"
            android:textColor="#434343"
            android:autoLink="web"
            android:linksClickable="true"
            android:textColorLink="@color/colorPrimary"
            tools:text="After a long and hard day at work in the concrete jungle of Singapore’s Central Business District, there wasn’t any reason or place to linger about, kick back and chill out at. 'Til now. at work in the fabulous place..." />

        <!-- Divider Line -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lily_white" />

      </LinearLayout>

      <!-- About + Trip Advisor -->
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="10dp"
          android:background="@color/white"
          android:orientation="vertical">

        <android.support.v7.widget.AppCompatTextView
            fontPath="@string/font_lato_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="28dp"
            android:text="@string/txt_about_the_brand"
            android:textColor="#424242"
            android:textSize="15sp" />

        <com.github.aakira.expandablelayout.ExpandableRelativeLayout
            android:id="@+id/ellAbout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:ael_duration="500"
            app:ael_expanded="true"
            app:ael_interpolator="accelerateDecelerate">

          <android.support.v7.widget.AppCompatTextView
              android:id="@+id/tvBrandAboutShort"
              fontPath="@string/font_lato_regular"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="16dp"
              android:layout_marginLeft="16dp"
              android:layout_marginRight="16dp"
              android:ellipsize="end"
              android:lineSpacingMultiplier="1.2"
              android:maxLines="4"
              android:textColor="#434343"
              android:autoLink="web"
              android:linksClickable="true"
              android:textColorLink="@color/colorPrimary"
              tools:text="After a long and hard day at work in the concrete jungle of Singapore’s Central Business District, there wasn’t any reason or place to linger about, kick back and chill out at. 'Til now. at work in the fabulous place..." />

          <android.support.v7.widget.AppCompatTextView
              android:id="@+id/tvBrandAbout"
              fontPath="@string/font_lato_regular"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="16dp"
              android:layout_marginLeft="16dp"
              android:layout_marginRight="16dp"
              android:lineSpacingMultiplier="1.2"
              android:textIsSelectable="true"
              android:textColor="#434343"
              android:autoLink="web"
              android:linksClickable="true"
              android:textColorLink="@color/colorPrimary"
              tools:text="After a long and hard day at work in the concrete jungle of Singapore’s Central Business District, there wasn’t any reason or place to linger about, kick back and chill out at. 'Til now. at work in the fabulous place..." />

          <!-- About -> Social Media -->
          <LinearLayout
              android:id="@+id/llSocialMedia"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_below="@id/tvBrandAbout"
              android:layout_marginBottom="20dp"
              android:layout_marginLeft="16dp"
              android:layout_marginRight="16dp"
              android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivFacebook"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginRight="8dp"
                android:src="@drawable/ic_facebook_red" />

            <ImageView
                android:id="@+id/ivTwitter"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginRight="8dp"
                android:src="@drawable/ic_twitter_red" />

            <ImageView
                android:id="@+id/ivInstagram"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginRight="8dp"
                android:src="@drawable/ic_instagram_red" />

            <Button
                android:id="@+id/btnWebsite"
                style="?android:attr/textAppearanceButton"
                fontPath="@string/font_brandon_black"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:background="@drawable/bg_white_stroke_primary_radius_4dp"
                android:gravity="center"
                android:paddingLeft="@dimen/margin_medium"
                android:paddingRight="@dimen/margin_medium"
                android:text="@string/txt_visit_website"
                android:textColor="@color/colorPrimary"
                tools:ignore="MissingPrefix" />

          </LinearLayout>

        </com.github.aakira.expandablelayout.ExpandableRelativeLayout>

        <!-- Divider Line -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lily_white" />

        <!-- TripAdvisor -->
        <LinearLayout
            android:id="@+id/btnTripAdvisor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:background="?attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="22dp"
            android:paddingTop="22dp"
            android:visibility="gone">

          <sg.com.fuzzie.android.views.TripAdvisorRatingView
              android:id="@+id/vTripAdvisorRating"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="16dp" />

          <android.support.v7.widget.AppCompatTextView
              android:id="@+id/tvTripAdvisorReviewCount"
              fontPath="@string/font_lato_regular"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_marginLeft="6dp"
              android:layout_weight="1"
              android:gravity="left|center_vertical"
              android:text="(0 Reviews)"
              android:textColor="#434343"
              android:textSize="12sp"
              tools:text="(56 Reviews)" />

          <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginRight="16dp"
              android:src="@drawable/ic_chevron_right_grey" />

        </LinearLayout>

        <!-- Divider Line -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lily_white" />

      </LinearLayout>

      <!-- Top Divider Line -->
      <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@color/lily_white" />

      <!-- Terms + How to Redeem + Store locations -->
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="10dp"
          android:background="@color/white"
          android:orientation="vertical">

        <!-- Terms & Conditions -->
        <LinearLayout
            android:id="@+id/btnTermsAndConditions"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:clickable="true"
            android:background="?attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:orientation="horizontal">

          <ImageView
              android:layout_width="30dp"
              android:layout_height="30dp"
              android:layout_marginStart="16dp"
              android:src="@drawable/icon_terms_conditions"/>

          <android.support.v7.widget.AppCompatTextView
              fontPath="@string/font_lato_regular"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="8dp"
              android:layout_weight="1"
              android:text="Terms and conditions"
              android:textColor="#424242"
              android:textSize="15sp" />

          <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginEnd="16dp"
              android:src="@drawable/ic_chevron_right_grey" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="16dp"
            android:background="@color/lily_white" />

        <LinearLayout
            android:id="@+id/btnHowToRedeem"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:clickable="true"
            android:background="?attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:orientation="horizontal">

          <ImageView
              android:layout_width="30dp"
              android:layout_height="30dp"
              android:layout_marginStart="16dp"
              android:src="@drawable/icon_how_to_redeem"/>

          <android.support.v7.widget.AppCompatTextView
              fontPath="@string/font_lato_regular"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="8dp"
              android:layout_weight="1"
              android:text="How to redeem"
              android:textColor="#424242"
              android:textSize="15sp" />

          <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginEnd="16dp"
              android:src="@drawable/ic_chevron_right_grey" />

        </LinearLayout>

        <View
            android:id="@+id/vStoreLocationsPreDivider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="16dp"
            android:background="@color/lily_white" />

        <LinearLayout
            android:id="@+id/btnStoreLocations"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:clickable="true"
            android:background="?attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:orientation="horizontal">

          <ImageView
              android:layout_width="30dp"
              android:layout_height="30dp"
              android:layout_marginStart="16dp"
              android:src="@drawable/icon_store_locations"/>

          <android.support.v7.widget.AppCompatTextView
              fontPath="@string/font_lato_regular"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="8dp"
              android:layout_weight="1"
              android:text="Store location &amp; contact"
              android:textColor="#424242"
              android:textSize="15sp" />

          <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginEnd="16dp"
              android:src="@drawable/ic_chevron_right_grey" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lily_white" />

      </LinearLayout>

      <!-- Others Also Bought -->
      <android.support.v7.widget.RecyclerView
          android:id="@+id/rvAlsoBought"
          android:layout_width="match_parent"
          android:layout_height="320dp"
          android:background="#F5F5F5"/>

      <!-- Divider Line -->
      <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@color/lily_white" />

    </LinearLayout>

  </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>