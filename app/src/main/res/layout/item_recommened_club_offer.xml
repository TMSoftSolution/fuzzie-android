<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_marginRight="@dimen/margin_medium"
    android:orientation="vertical"
    >

  <FrameLayout
      android:id="@+id/layout_header"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_collapseMode="parallax"
      >

    <ImageView
        android:layout_width="256dp"
        android:layout_height="192dp"
        android:src="@color/dividerColor"
        />

    <ImageView
        android:id="@+id/iv_shop_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_margin="@dimen/margin_medium"
        android:gravity="center_vertical"
        android:src="@drawable/ic_menu_camera"
        />
  </FrameLayout>

  <TextView
      android:id="@+id/tv_shop_type"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="bottom|start"
      android:layout_marginTop="@dimen/margin_small"
      android:textColor="@android:color/black"
      android:textSize="@dimen/material_text_subhead"
      fontPath="@string/font_brandon_bold"
      tools:ignore="MissingPrefix"
      tools:text="Starbucks"
      style="?android:attr/textAppearanceButton"
      />

  <TextView
      android:id="@+id/tv_offer"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="bottom|start"
      android:layout_marginTop="@dimen/margin_small"
      android:textSize="@dimen/material_text_subhead"
      tools:ignore="MissingPrefix"
      tools:text="One for one coffee latte"
      />


</LinearLayout>