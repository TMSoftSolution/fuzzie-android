<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_jackpot_digit_input_id"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:background="@drawable/bg_jackpot_digit_input_inactive"
    android:layout_marginStart="16dp">

    <android.support.v7.widget.AppCompatTextView
    fontPath="@string/font_lato_regular"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:gravity="center"
    android:text="Enter your desired 4-digit number"
    android:textColor="@color/white"
    android:alpha="0.4"
    android:textSize="12sp" />

    <me.philio.pinentry.PinEntryView
        android:id="@+id/pinEntry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_gravity="center"
        app:accentType="character"
        app:digitWidth="50dp"
        app:digitHeight="50dp"
        app:digitSpacing="10dp"
        app:digitBackground="@drawable/bg_pin_jackpot"
        app:pinAccentColor="@color/colorPrimary"
        app:digitTextSize="10sp"
        app:digitTextColor="@color/white"
        app:mask=""
        app:pinInputType="number"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:gravity="center">

        <android.support.v7.widget.AppCompatTextView
            fontPath="@string/font_brandon_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="JACKPOT TICKET: "
            android:textColor="@color/colorJackpotYellow"
            android:textSize="11sp" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tvSequence"
            fontPath="@string/font_brandon_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="1/3"
            android:textColor="@color/white"
            android:textSize="11sp" />

    </LinearLayout>


</LinearLayout>