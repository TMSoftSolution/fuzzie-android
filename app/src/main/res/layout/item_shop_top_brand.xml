<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_shop_top_brand_id"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivBackground"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:scaleType="centerCrop" />

    <android.support.v7.widget.CardView
        android:id="@+id/cvCashback"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_marginTop="122dp"
        android:layout_centerHorizontal="true"
        app:cardElevation="0dp"
        app:cardCornerRadius="2dp"
        app:cardBackgroundColor="@android:color/transparent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tvCashback"
                android:background="@color/celestial_blue"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:drawableLeft="@drawable/ic_cashback_white_small"
                android:drawablePadding="2dp"
                android:gravity="center"
                android:textColor="@color/white"
                fontPath="@string/font_brandon_bold"
                android:text="20%"
                android:textSize="12sp"
                />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tvPowerUp"
                android:background="@drawable/bg_powerup_small_white"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:drawableLeft="@drawable/ic_lighting_accent_12dp"
                android:drawablePadding="2dp"
                android:gravity="center"
                android:textColor="#3B93DA"
                fontPath="@string/font_brandon_bold"
                android:text="+20%"
                android:textSize="12sp" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v4.widget.Space
        android:id="@+id/space"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:layout_below="@+id/cvCashback"
        />

</RelativeLayout>