<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#AA000000">

    <android.support.v7.widget.CardView
        android:id="@+id/cvMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:foreground="?selectableItemBackground"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/image_club_sign"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/fuzzie_club_logo"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <android.support.v7.widget.AppCompatTextView
                    fontPath="@string/font_lato_black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:lineSpacingMultiplier="1.1"
                    android:text="@string/txt_club_exclusive_title"
                    android:textAlignment="center"
                    android:textColor="@color/textColorTertiary"
                    android:textSize="22sp" />

                <android.support.v7.widget.AppCompatTextView
                    fontPath="@string/font_lato_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:lineSpacingMultiplier="1.2"
                    android:text="@string/txt_club_exclusive_body"
                    android:textAlignment="center"
                    android:textColor="@color/textColorTertiary"
                    android:textSize="13sp" />

                <android.support.v7.widget.CardView
                    android:id="@+id/cvExplore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="24dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?selectableItemBackground"
                    app:cardBackgroundColor="@color/colorPrimary"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="0dp">

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        fontPath="@string/font_brandon_black"
                        android:textSize="13sp"
                        android:gravity="center"
                        android:text="EXPLORE THE CLUB"
                        android:textAllCaps="true"
                        android:textColor="@color/white"/>

                </android.support.v7.widget.CardView>

            </LinearLayout>

            
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cvClose"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignEnd="@id/cvMain"
        android:layout_alignTop="@id/cvMain"
        android:layout_marginTop="-10dp"
        android:layout_marginEnd="-10dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?selectableItemBackground"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="15dp"
        app:cardElevation="0dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_close_black_24dp"
            android:tint="@color/colorPrimary"/>

    </android.support.v7.widget.CardView>

</RelativeLayout>