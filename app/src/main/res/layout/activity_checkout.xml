<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivClose"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_close_white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvCheckout"
        android:layout_below="@id/ivClose"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/ivBrandImage"
            android:layout_width="match_parent"
            android:layout_height="185dp" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tvGiftCardName"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            fontPath="fonts/Lato_Regular.ttf"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textAllCaps="true"
            android:text="FOODPANDA ONLINE" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tvGiftCardValue"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            fontPath="@string/font_brandon_bold"
            android:textAlignment="center"
            android:textSize="25sp"
            android:text="S$100" />

    </LinearLayout>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tvCheckout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/tvAddToBag"
        android:background="@drawable/bg_primary_button"
        android:gravity="center"
        android:text="CHECKOUT"
        android:textSize="14sp"
        android:textColor="@color/white"
        fontPath="@string/font_brandon_black" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tvAddToBag"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_white_button"
        android:gravity="center"
        android:text="ADD TO BAG"
        android:textSize="14sp"
        android:textColor="@color/colorPrimary"
        fontPath="@string/font_brandon_black" />

</RelativeLayout>