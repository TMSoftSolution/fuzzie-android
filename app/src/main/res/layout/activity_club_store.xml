<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:focusableInTouchMode="true">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:clipToPadding="false"
        android:overScrollMode="never"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background"
            android:orientation="vertical">

            <!-- Store Info-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="16dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:orientation="vertical">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tvBrandName"
                        fontPath="@string/font_lato_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/textColorTertiary"
                        android:textSize="22sp"
                        android:text="Tanuki Raw" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/ivCategory"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:src="@drawable/ic_category_1_black"
                            android:alpha="0.4"/>

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/tvCategory"
                            fontPath="@string/font_lato_regular"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="4dp"
                            android:textColor="#939393"
                            android:textSize="14sp"
                            android:text="Japanese" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/physicalStoreInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_store_location_grey"/>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <android.support.v7.widget.AppCompatTextView
                                    android:id="@+id/tvLocation"
                                    fontPath="@string/font_lato_bold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/textColorTertiary"
                                    android:textSize="14sp"
                                    android:text="Joo Chiat, Singapore"/>

                                <android.support.v7.widget.AppCompatTextView
                                    android:id="@+id/tvDistance"
                                    fontPath="@string/font_lato_regular"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:textColor="#939393"
                                    android:alpha="0.7"
                                    android:textSize="12sp"
                                    android:text="0.2 km"/>

                            </LinearLayout>

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/tvStoreMore"
                                fontPath="@string/font_lato_bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="4dp"
                                android:textColor="@color/colorPrimary"
                                android:textSize="12sp"
                                android:text=" more"/>

                        </LinearLayout>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginTop="16dp"
                            android:layout_gravity="bottom"
                            android:src="@drawable/dash_line_horizontal"
                            android:layerType="software"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:orientation="horizontal">

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/tvOpened"
                                fontPath="@string/font_lato_bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="4dp"
                                android:textColor="@color/white"
                                android:textSize="10sp"
                                android:text="OPEN NOW"
                                android:background="@drawable/bg_store_opened"/>

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/tvOpenState"
                                fontPath="@string/font_lato_bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:textColor="#3F3F3F"
                                android:textSize="10sp"
                                tools:text="UNTIL 11PM TODAY"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lily_white" />

            <!-- Store Offers-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:visibility="visible">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/lily_white" />

                <android.support.v7.widget.AppCompatTextView
                    fontPath="@string/font_brandon_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="20dp"
                    android:text="OFFERS AVAILABLE"
                    android:textColor="#262626"
                    android:textSize="14sp"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvOffer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:nestedScrollingEnabled="false"
                    android:overScrollMode="never"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/lily_white" />

            </LinearLayout>

            <!-- About Brand-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:visibility="visible">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/lily_white" />

                <android.support.v7.widget.AppCompatTextView
                    fontPath="@string/font_brandon_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="28dp"
                    android:text="@string/txt_about_the_brand"
                    android:textAllCaps="true"
                    android:textColor="#262626"
                    android:textSize="14sp" />

                <com.github.aakira.expandablelayout.ExpandableRelativeLayout
                    android:id="@+id/ellAbout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:ael_duration="500"
                    app:ael_expanded="true"
                    app:ael_interpolator="accelerateDecelerate">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tvBrandAboutShort"
                        fontPath="@string/font_lato_regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:ellipsize="end"
                        android:lineSpacingMultiplier="1.2"
                        android:maxLines="4"
                        android:textColor="@color/textColorTertiary"
                        android:textSize="13sp"
                        android:autoLink="web"
                        android:linksClickable="true"
                        android:textColorLink="@color/colorPrimary"
                        tools:text="After a long and hard day at work in the concrete jungle of Singapore’s Central Business District, there wasn’t any reason or place to linger about, kick back and chill out at. 'Til now. at work in the fabulous place..." />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tvBrandAbout"
                        fontPath="@string/font_lato_regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:lineSpacingMultiplier="1.2"
                        android:textSize="13sp"
                        android:textIsSelectable="true"
                        android:textColor="@color/textColorTertiary"
                        android:autoLink="web"
                        android:linksClickable="true"
                        android:textColorLink="@color/colorPrimary"
                        tools:text="After a long and hard day at work in the concrete jungle of Singapore’s Central Business District, there wasn’t any reason or place to linger about, kick back and chill out at. 'Til now. at work in the fabulous place..." />

                    <LinearLayout
                        android:id="@+id/llSocialMedia"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/tvBrandAbout"
                        android:layout_marginBottom="20dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ivFacebook"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_marginRight="8dp"
                            android:src="@drawable/ic_facebook_red" />

                        <ImageView
                            android:id="@+id/ivTwitter"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_marginRight="8dp"
                            android:src="@drawable/ic_twitter_red" />

                        <ImageView
                            android:id="@+id/ivInstagram"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_marginRight="8dp"
                            android:src="@drawable/ic_instagram_red" />

                        <Button
                            android:id="@+id/btnWebsite"
                            style="?android:attr/textAppearanceButton"
                            fontPath="@string/font_brandon_black"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:background="@drawable/bg_white_stroke_primary_radius_4dp"
                            android:gravity="center"
                            android:paddingLeft="@dimen/margin_medium"
                            android:paddingRight="@dimen/margin_medium"
                            android:text="@string/txt_visit_website"
                            android:textColor="@color/colorPrimary"
                            tools:ignore="MissingPrefix" />

                    </LinearLayout>

                </com.github.aakira.expandablelayout.ExpandableRelativeLayout>

            </LinearLayout>

            <!-- Store Details-->
            <LinearLayout
                android:id="@+id/storeDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:visibility="visible">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/lily_white"/>


                <android.support.v7.widget.AppCompatTextView
                    fontPath="@string/font_lato_bold"
                    android:id="@+id/tvStoreName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="16dp"
                    android:text="Joo Chiat, Singapore"
                    android:textColor="#262626"
                    android:textSize="14sp" />

                <android.support.v7.widget.AppCompatTextView
                    fontPath="@string/font_lato_regular"
                    android:id="@+id/tvStoreAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="10dp"
                    android:text="Blk 4 Changi Village Road  #01-2084 Singapore 500004"
                    android:lineSpacingMultiplier="1.2"
                    android:textColor="#262626"
                    android:textSize="13sp" />

                <android.support.v7.widget.AppCompatTextView
                    fontPath="@string/font_lato_regular"
                    android:id="@+id/tvStoreBusinessTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="10dp"
                    android:text="Monday - Saturday: 10.30am – 10pm \nSunday: 11am – 8pm"
                    android:lineSpacingMultiplier="1.2"
                    android:textColor="#939393"
                    android:textSize="13sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:orientation="horizontal">

                    <android.support.v7.widget.CardView
                        android:id="@+id/cvDirection"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?selectableItemBackground"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:cardCornerRadius="2dp"
                        app:cardElevation="0dp">

                        <android.support.v7.widget.AppCompatTextView
                            fontPath="@string/font_lato_bold"
                            android:layout_width="100dp"
                            android:layout_height="30dp"
                            android:gravity="center"
                            android:text="Get direction"
                            android:textColor="@color/colorPrimary"
                            android:background="@drawable/bg_call_store"
                            android:textSize="11sp" />

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/cvCallStore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?selectableItemBackground"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:cardCornerRadius="2dp"
                        app:cardElevation="0dp">

                        <android.support.v7.widget.AppCompatTextView
                            fontPath="@string/font_lato_bold"
                            android:layout_width="100dp"
                            android:layout_height="30dp"
                            android:gravity="center"
                            android:text="Call store"
                            android:textColor="@color/colorPrimary"
                            android:background="@drawable/bg_call_store"
                            android:textSize="11sp" />

                    </android.support.v7.widget.CardView>

                </LinearLayout>

            </LinearLayout>

            <!-- Other Store Info-->
            <LinearLayout
                android:id="@+id/otherInfos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:visibility="visible">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/lily_white" />

                <LinearLayout
                    android:id="@+id/btnStoreLocations"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:clickable="true"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="16dp"
                        android:src="@drawable/icon_store_locations"/>

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tvStoreMore1"
                        fontPath="@string/font_lato_bold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:text="more store locations"
                        android:textColor="#262626"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/ic_chevron_right_grey" />

                </LinearLayout>

                <View
                    android:id="@+id/storelocationDivider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="16dp"
                    android:background="@color/lily_white" />

                <LinearLayout
                    android:id="@+id/btnGrab"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:clickable="true"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="16dp"
                        android:src="@drawable/ic_grab"/>

                    <android.support.v7.widget.AppCompatTextView
                        fontPath="@string/font_lato_bold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:text="Book a ride with Grab"
                        android:textColor="#262626"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/ic_chevron_right_grey" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="16dp"
                    android:background="@color/lily_white" />

                <LinearLayout
                    android:id="@+id/btnQuandoo"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:clickable="true"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="16dp"
                        android:src="@drawable/ic_quandoo"/>

                    <android.support.v7.widget.AppCompatTextView
                        fontPath="@string/font_lato_bold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:text="Reserve a table with Quandoo"
                        android:textColor="#262626"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/ic_chevron_right_grey" />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/btnTripAdvisor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="16dp"
                    android:background="@color/lily_white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:clickable="true"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <sg.com.fuzzie.android.views.TripAdvisorRatingView
                        android:id="@+id/vTripAdvisorRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tvTripAdvisorReviewCount"
                        fontPath="@string/font_lato_regular"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:layout_weight="1"
                        android:gravity="start|center_vertical"
                        android:text="(0 Reviews)"
                        android:textColor="@color/textColorTertiary"
                        android:textSize="12sp"
                        tools:text="(56 Reviews)" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/ic_chevron_right_grey" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lily_white" />

            <!-- Fine Print-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:visibility="gone">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/lily_white" />

                <android.support.v7.widget.AppCompatTextView
                    fontPath="@string/font_brandon_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="20dp"
                    android:text="FINE PRINT"
                    android:textColor="#262626"
                    android:textSize="14sp" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvFinePrint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:nestedScrollingEnabled="false"
                    android:overScrollMode="never"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/lily_white" />

            </LinearLayout>

            <!-- Related Stores-->
            <LinearLayout
                android:id="@+id/llRelatedStores"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/lily_white"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal">

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:text="RELATED STORES"
                        android:textColor="#262626"
                        android:textSize="14sp"
                        fontPath="@string/font_brandon_black" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tvViewAllRelatedStores"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:padding="8dp"
                        android:text="View all"
                        android:textColor="@color/colorPrimary"
                        android:textSize="11sp"
                        fontPath="@string/font_lato_bold" />

                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvRelatedStores"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingStart="11dp"
                    android:paddingEnd="11dp"
                    android:layout_marginBottom="20dp"
                    android:clipToPadding="false"
                    android:overScrollMode="never"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/lily_white"/>

            </LinearLayout>

            <!-- Near Stores-->
            <LinearLayout
                android:id="@+id/llNearStores"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/lily_white"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal">

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:text="NEAR THIS STORES"
                        android:textColor="#262626"
                        android:textSize="14sp"
                        fontPath="@string/font_brandon_black" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tvViewAllNearbyStores"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:padding="8dp"
                        android:text="View all"
                        android:textColor="@color/colorPrimary"
                        android:textSize="11sp"
                        fontPath="@string/font_lato_bold" />

                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvNearStores"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingStart="11dp"
                    android:paddingEnd="11dp"
                    android:layout_marginBottom="20dp"
                    android:clipToPadding="false"
                    android:overScrollMode="never"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/lily_white"/>

            </LinearLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:fitsSystemWindows="true"
        app:layout_behavior="sg.com.fuzzie.android.utils.FlingBehavior"
        android:visibility="visible">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:layout_scrollFlags="scroll|enterAlwaysCollapsed"
            app:contentScrim="@android:color/transparent"
            app:scrimVisibleHeightTrigger="200dp"
            app:scrimAnimationDuration="1500"
            app:collapsedTitleGravity="center"
            app:collapsedTitleTextAppearance="@style/AppBarTextAppearance"
            app:expandedTitleTextAppearance="@style/AppBarExpandedTextAppearance">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                android:visibility="visible"
                android:background="@color/white">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="280dp">

                    <android.support.v4.view.ViewPager
                        android:id="@+id/vpPhotos"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/brands_placeholder" />

                    <ImageView
                        android:layout_alignParentTop="true"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/top_bottom_gradient" />

                    <android.support.design.widget.TabLayout
                        android:id="@+id/tlPhotosIndicator"
                        android:layout_width="match_parent"
                        android:layout_height="7dp"
                        android:layout_alignBottom="@id/vpPhotos"
                        android:layout_marginBottom="12dp"
                        app:tabGravity="center"
                        app:tabIndicatorHeight="0dp"
                        app:tabPaddingStart="0dp"
                        app:tabPaddingEnd="5dp" />

                </RelativeLayout>


            </RelativeLayout>


        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <Button
        android:id="@+id/ivBookmark"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_anchor="@id/app_bar_layout"
        app:layout_anchorGravity="end|bottom"
        android:background="@drawable/transition_bookmark_select"/>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark"
        android:theme="@style/Base.ThemeOverlay.AppCompat.Dark"
        app:layout_collapseMode="pin"
        app:contentInsetLeft="0dp"
        android:background="@color/colorPrimary"
        android:elevation="3dp"
        app:elevation="3dp"
        app:contentInsetRight="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tvTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:gravity="center"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="16sp"
                android:text="TANUKI RAW"
                fontPath="@string/font_brandon_black"
                android:textAllCaps="true"
                android:textColor="@color/white" />

            <LinearLayout
                android:layout_marginEnd="16dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackground"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:id="@+id/ivReferral"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_club_referral"/>

                <ImageView
                    android:id="@+id/ivShare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/ic_btn_share"/>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.Toolbar>


</android.support.design.widget.CoordinatorLayout>