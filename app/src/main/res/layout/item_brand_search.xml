<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_brand_search_id"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

  <LinearLayout
      android:id="@+id/llBrand"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivCategory"
        android:layout_marginLeft="16dp"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_category_1_red"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        android:orientation="vertical"
        >

      <android.support.v7.widget.AppCompatTextView
          android:id="@+id/tvBrandName"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@color/textColorPrimary"
          android:textSize="14sp"
          fontPath="@string/font_lato_bold"
          tools:text="Aramsa Spa"
          />

      <android.support.v7.widget.AppCompatTextView
          android:id="@+id/tvCategory"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="#ADADAD"
          android:textSize="13sp"
          fontPath="fonts/Lato_Regular.ttf"
          tools:text="Restaurants"
          />


    </LinearLayout>

  </LinearLayout>

  <View
      android:layout_below="@id/llBrand"
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/lily_white"/>

</RelativeLayout>