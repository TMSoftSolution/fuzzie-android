<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="256dp"
    >

    <ImageView
        android:id="@+id/ivBackground"
        android:layout_width="match_parent"
        android:layout_height="256dp"
        android:scaleType="centerCrop"
        android:background="@color/dividerColor" />


    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="256dp"
        android:background="@drawable/gradient_no_round" />


    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginEnd="@dimen/margin_medium"
        android:layout_marginTop="@dimen/margin_medium"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tvCashback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:drawableLeft="@drawable/ic_cashback_white_16dp"
                android:drawablePadding="3dp"
                android:drawableStart="@drawable/ic_cashback_white_16dp"
                android:padding="5dp"
                android:textColor="@android:color/white"
                android:textSize="13sp"
                android:text="15%"
                fontPath="@string/font_brandon_black"
                />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tvPowerUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_lighting_accent_16dp"
                android:drawablePadding="3dp"
                android:drawableStart="@drawable/ic_lighting_accent_16dp"
                android:padding="5dp"
                android:textColor="@color/colorAccent"
                android:textSize="13sp"
                android:text="+10%"
                fontPath="@string/font_brandon_black"
                />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start|bottom"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginBottom="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_xlarge"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivCategory"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_category_26_white"
                />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tvPromo"
                fontPath="@string/font_brandon_black"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/red_bg_borderless_promo"
                android:padding="6dp"
                android:text="PROMO"
                android:textColor="@color/white"
                android:textSize="8sp"
                android:textStyle="bold" />

        </LinearLayout>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tvBrandName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@android:color/white"
            android:textSize="17sp"
            fontPath="@string/font_lato_bold"
            android:text="TOPSHOP"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3.5dp"
            >

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tvDistance"
                fontPath="fonts/Lato_Regular.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:shadowDx="0.0"
                android:shadowDy="2.0"
                android:shadowRadius="2.0"
                android:textColor="@color/white"
                android:alpha="0.6"
                android:textSize="14sp"
                android:text="1.2 km"
                />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tvStoreName"
                fontPath="fonts/Lato_Regular.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:shadowDx="0.0"
                android:shadowDy="2.0"
                android:shadowRadius="2.0"
                android:textColor="@color/white"
                android:alpha="0.6"
                android:textSize="14sp"
                android:text="Deloce Tokyo by MOF"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llLikes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_medium"
        android:layout_gravity="bottom|end"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/liker_image"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_heart_filled"
            android:tint="@color/primary" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tvLikesCount"
            fontPath="@string/font_lato_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3.5dp"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="12.5sp"
            android:textStyle="bold" />

    </LinearLayout>

</FrameLayout>